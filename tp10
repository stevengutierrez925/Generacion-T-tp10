        <p>&copy; 2025 Mi Sitio Web Responsivo</p>
    </footer>

    <script>
        const btnMenu = document.getElementById('btn-menu');
        const navMenu = document.getElementById('nav-menu');

        btnMenu.addEventListener('click', () => {
            if(navMenu.style.display === 'flex') {
                navMenu.style.display = 'none';
            } else {
                navMenu.style.display = 'flex';
            }
        });
    </script>
</body>
</html>

style.css:


body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    color: #333;
    background-color: #f4f4f4;
}

header {
    background-color: #2b5797;
    color: white;
    padding: 15px 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

header h1 {
    margin: 0;
    font-size: 24px;
}

#nav-menu ul {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 20px;
}

#nav-menu a {
    color: white;
    text-decoration: none;
}

#btn-menu {
    display: none;
    background-color: #1e3e6e;
    border: none;
    color: white;
    padding: 10px 15px;
    font-size: 18px;
    cursor: pointer;
}

main {
    display: flex;
    gap: 20px;
    padding: 20px;
    max-width: 1200px;
    margin: 0 auto;
}

section {
    background-color: white;
    padding: 20px;
    border-radius: 8px;
    flex: 3;
}

aside {
    background-color: #d9e1f2;
    padding: 20px;
    border-radius: 8px;
    flex: 1;
}

img {
    max-width: 100%;
    height: auto;
    display: block;
    margin-top: 15px;
}

footer {
    background-color: #2b5797;
    color: white;
    text-align: center;
    padding: 15px 0;
    margin-top: 20px;
}

@media (max-width: 768px) {
    main {
        flex-direction: column;
    }

    #nav-menu {
        display: none;
        flex-direction: column;
        gap: 10px;
        background-color: #2b5797;
        margin-top: 10px;
        padding: 10px;
        border-radius: 6px;
    }

    #btn-menu {
        display: inline-block;
    }
}

@media (max-width: 480px) {
    body {
        font-size: 14px;
    }

    header h1 {
        font-size: 20px;
    }

    section, aside {
        padding: 15px;
    }
}
